<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tv_filter_state"
        style="@style/ListTitleText"
        android:paddingBottom="0dp"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/ll_assignee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp" >

        <ImageView
            android:id="@+id/iv_assignee_avatar"
            style="@style/AvatarMedium"
            android:contentDescription="@string/avatar" />

        <TextView
            android:id="@+id/tv_filter_assignee"
            style="@style/ListSubtitleText"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textStyle="bold" />

        <TextView
            style="@style/ListSubtitleText"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:text="@string/assigned" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_filter_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp" />

    <TextView
        android:id="@+id/tv_filter_milestone"
        style="@style/ListSubtitleText"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:textStyle="bold" />

</merge>
